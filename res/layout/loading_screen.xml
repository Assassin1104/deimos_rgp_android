<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:keepScreenOn="true" >

    <TextView
        android:id="@+id/tvLoadingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="56sp" />

    <ImageView
        android:id="@+id/ivLoadingSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progBarLoadingScreen"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ProgressBar
        android:id="@+id/progBarLoadingScreen"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/tvLoadingDescription"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:progressDrawable="@drawable/mana_progbar" />

    <TextView
        android:id="@+id/tvLoadingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Contacting party members..."
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>